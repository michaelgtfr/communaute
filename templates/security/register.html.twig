{% extends 'base.html.twig' %}

{% block title %}Log out!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block body %}
    <section class="form">
        {{ form_start(form) }}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 text-center p-sm-5">
                    <h1>Inscription</h1>
                </div>
                <div class="col-sm-12 p-sm-3">
                    <div class="row">
                        <div class="col-lg-2 offset-lg-1">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-lg-2 offset-lg-2">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col-lg-2 offset-lg-2">
                            {{ form_row(form.username) }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 p-sm-3">
                    <div class="row">
                        <div class="col-lg-2 offset-lg-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-lg-2 offset-lg-2">
                            {{ form_row(form.address) }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-12 p-sm-3">
                    <div class="row">
                        <div class="col-lg-2 offset-lg-1 form-control-sm date_birth h-auto">
                            {{ form_row(form.dateBirth) }}
                        </div>
                        <div class="col-lg-2 offset-lg-2">
                            {{ form_row(form.country) }}
                        </div>
                        <div class="col-lg-2 offset-lg-2">
                            {{ form_row(form.completePictureName) }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 p-sm-3">
                    <div class="row">
                        <div class="col-lg-2 offset-lg-3">
                            {{ form_row(form.password) }}
                        </div>
                        <div class="col-lg-2 offset-lg-2">
                            {{ form_row(form.passwordConfirm) }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 p-sm-3">
                    <div class="col-lg-4 offset-lg-4">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                <div class="col-sm-12 text-center p-sm-3">
                        {{ form_row(form.termsOfUse) }}
                </div>
                <div class="text-center col-sm-12 p-5">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{  parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}